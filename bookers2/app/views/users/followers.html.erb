
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <h2>follower Users</h2>
        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody><% @user.follower_user.where.not(id: current_user.id).each do |user| %>
            <tr>
              <td>
                <%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %>
              </td>
              <td>
                <%= user.name %>
              </td>
              <td>
                <%= " フォロー数:#{user.followed.count}" %>
              </td>
              <td>
                <%= " フォロワー数:#{user.follower.count}" %>
              </td>
              <td>
                <%= link_to user_path(user.id) do %>Show<% end %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>
