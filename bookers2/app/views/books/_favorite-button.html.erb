
<% if book.favorited_by?(current_user) %>
    <p>
      <%= link_to book_favorites_path(book.id), method: :delete, remote: true, class: 'fas fa-heart', style:'color: red' do %>
        <%= book.favorites.count %>
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to book_favorites_path(book.id), method: :post, remote: true, class: 'far fa-heart' do %>
        <%= book.favorites.count %>
      <% end %>
    </p>
  <% end %>